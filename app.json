{
  "expo": {
    "name": "Katkısız",
    "slug": "katkisiz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "katkisiz",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Ürün etiketlerini taramak için kamera izni gereklidir."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Galeriden fotoğraf seçmek için izin gereklidir."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Yakınınızdaki katkısız ürün satan yerleri göstermek için konum izni gereklidir."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.katkisiz.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Ürün etiketlerini taramak için kamera izni gereklidir.",
        "NSPhotoLibraryUsageDescription": "Galeriden fotoğraf seçmek için izin gereklidir.",
        "NSLocationWhenInUseUsageDescription": "Yakınınızdaki katkısız ürün satan yerleri göstermek için konum izni gereklidir.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.katkisiz.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "ff9f1f3a-8b04-4dbb-a49e-3ca5d40c08b3"
      }
    }
  }
}
